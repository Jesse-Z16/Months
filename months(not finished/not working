# Valid month program

# -------------------------
# Subprograms
# -------------------------
month = int(input('Enter a month 1-12: '))

def validate_month(month):
  while not validate_month:
    if (month >= 1) and (month <= 12):
      return True
    else:
      validate_month = False
      return false

# -------------------------
# Main program
# -------------------------

validate_month = validate_month(month)
print("Thank you. Input accepted.")
